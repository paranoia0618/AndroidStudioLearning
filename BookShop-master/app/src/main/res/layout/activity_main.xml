<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mly.panhouye.bookshop.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBack"/>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@color/colorBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/home"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_img"
                android:background="@drawable/home_picture_select"
                android:layout_width="30dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/home_txt"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="12sp"
                android:textColor="@drawable/shop_text_select"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/discover"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/dicover_img"
                android:background="@drawable/discover_picture_select"
                android:layout_width="30dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/dicover_txt"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="发现"
                android:textSize="12sp"
                android:textColor="@drawable/shop_text_select"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/person"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/person_img"
                android:background="@drawable/person_picture_select"
                android:layout_width="30dp"
                android:layout_height="25dp" />
            <TextView
                android:id="@+id/person_txt"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textSize="12sp"
                android:textColor="@drawable/shop_text_select"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>